<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rolecall.CreateListing"
    android:background="@drawable/gradient_background">

    <View
        android:id="@+id/frame"
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/listing_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Game Title"
        app:layout_constraintTop_toTopOf="@+id/frame"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <TextView
        android:id="@+id/char_slots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Character Slots"
        app:layout_constraintTop_toBottomOf="@+id/game_title"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <TextView
        android:id="@+id/pref_environment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Prefferred Enviornment"
        app:layout_constraintTop_toBottomOf="@+id/char_slots"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <Spinner
        android:id="@+id/pref_environment_spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pref_environment"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </Spinner>

    <TextView
        android:id="@+id/max_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Maximum Distance"
        app:layout_constraintTop_toBottomOf="@+id/pref_environment_spinner"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <TextView
        android:id="@+id/pref_role_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Prefferred Role for Character"
        app:layout_constraintTop_toBottomOf="@+id/max_distance"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <TextView
        android:id="@+id/pref_role_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Prefferred Role in Campaign"
        app:layout_constraintTop_toBottomOf="@+id/pref_role_char"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <TextView
        android:id="@+id/campaign_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Campaign Difficulty"
        app:layout_constraintTop_toBottomOf="@+id/pref_role_campaign"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <Spinner
        android:id="@+id/campaign_difficulty_spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/campaign_difficulty"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </Spinner>

    <TextView
        android:id="@+id/pref_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Schedule"
        app:layout_constraintTop_toBottomOf="@+id/campaign_difficulty_spinner"
        app:layout_constraintStart_toStartOf="@+id/frame">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back_button"
            android:text="@string/back_button_label"
            android:textColor="@color/white">
        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_weight="1">
        </View>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/match_button"
            android:text="@string/submit_button_label"
            android:textColor="@color/white"
            android:onClick="viewListing">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>